<div clas="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
      </figure>
      <div class="media-content">
        </div>
        </article>
        </div>

    <% @tweeets.each do | tweeet | %>
      <div class="box">
      <article class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
            </figure>
            </div>
          <div class="media-content">
            <div class="content">
                <strong>Eden Lompo</strong><br />
                <small>@lompo</small><br/>
                <p><%= tweeet.tweeet %></p>
              </div>
              <nav class="level">
                <div class="level-left is-mobile">
                  <% link_to tweeet, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                  <% end %>
                  <% link_to edit_tweet_path(tweeet), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></span>
                    <% end %>
                    <%= link_to tweeet, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"
                  }do %>
                  <span class="icon"><i class="fa fa-trash-o" area-hidden="true"></i></span>
                  <% end %>
              </div>
              </nav>
              </div>
              </article>
                </div>
                  <% end %>
